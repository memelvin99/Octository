// C++ implementation of the approach 
#include <bits/stdc++.h> 
using namespace std; 

// Function to return the nth term 
// of the given series 
int oddTriangularNumber(int N) 
{ 
	return (N * ((2 * N) - 1)); 
} 

// Driver code 
int main() 
{ 
	int N = 3; 
	cout << oddTriangularNumber(N); 

	return 0; 
} 
